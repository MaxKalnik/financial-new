.text-box.text-box--blue
  .breadcrumbs__wrap
    .breadcrumbs__item
      a.breadcrumbs__link(href='')
        | Home
    .breadcrumbs__item
      a.breadcrumbs__link(href='')
        | Reports
    .breadcrumbs__item
      a.breadcrumbs__link(href='')
        | The Best and Worst Financial Institutions
    .breadcrumbs__item
      | Full National Ranking

  h2.block-title Full National Ranking

  .tables-container
    .mobile-only
      table.ranking-table.ranking-table--fixed
        thead
          tr
            th #
            th Bank

        tbody
          each value in values
            tr
              td
                = value.num
              td
                = value.bank

    .ranking-table__wrapper
      table.ranking-table.ranking-table--data
        thead
          tr
            th #
            th Bank
            th Total Complaints
            th % All Complaints
            th Credit Card Complaints
            th CC Rank
            th Account Complaints
            th Account Complaint Rank
            th Mortgage Complaints
            th Mortgage Rank
            th Complaints/Assets
            th Total Assets

        tbody
          each value in values
            tr
              td
                = value.num

              td
                = value.bank

              td
                = value.totalComplaints

              td
                = value.allComplaints

              td
                = value.ccComplaints

              td
                = value.ccRank

              td
                = value.accountComplaints

              td
                = value.accountComplaintRank

              td
                = value.mortageComplaints

              td
                = value.mortageRank

              td
                = value.complaintAssets

              td
                = value.totalAssets

  .btn-container
    a.btn-go-back(href="index.html")
      | GO BACK TO THE FULL STUDY
